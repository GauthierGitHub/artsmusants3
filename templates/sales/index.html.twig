{% extends 'base.html.twig' %}

{% block title %}Sales index{% endblock %}

{% block body %}
    <h1>Sales index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Canceled</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.date ? sale.date|date('Y-m-d') : '' }}</td>
                <td>{{ sale.canceled ? 'Yes' : 'No' }}</td>
                <td>{{ sale.painting}}</td>
                <td>{{ sale.customer.firstname}}</td>
                <td>{{ sale.customer.lastname}}</td>
                <td>{{ sale.customer.email}}</td>
                <td>
                    <a href="{{ path('sales_show', {'id': sale.id}) }}">show</a>
                    <a href="{{ path('sales_edit', {'id': sale.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sales_new') }}">Create new</a>
{% endblock %}
