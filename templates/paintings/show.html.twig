{% block body %}
    <h1>Paintings</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ painting.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ painting.category }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ painting.title }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ painting.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ painting.width }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ painting.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
