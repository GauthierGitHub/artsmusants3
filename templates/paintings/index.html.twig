{% extends 'base.html.twig' %}

{% block title %}Paintings index{% endblock %}

{% block body %}
    <h1>Paintings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Preview</th>
                <th>Title</th>
                <th>Category</th>
                <th>Height</th>
                <th>Width</th>
                <th>Year</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for painting in paintings %}
            <tr>
                <td>{{ painting.id }}</td>
                <td><img class="img-thumbnail" src="{{ asset('uploads/pictures/' ~ painting.picture) }}" alt="{{ painting.title }}"></td>
                <td>{{ painting.title }}</td>
                <td>{{ painting.category }}</td>
                <td>{{ painting.height }}</td>
                <td>{{ painting.width }}</td>
                <td>{{ painting.year }}</td>
                <td>{{ painting.description }}</td>
                <td>{{ painting.price }}</td>
                <td>
                    <a href="{{ path('paintings_show', {'id': painting.id}) }}">Show</a>
                    <a href="{{ path('paintings_edit', {'id': painting.id}) }}">Edit</a>
                    <a href="{{ asset('uploads/pictures/' ~ painting.picture) }}">View</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paintings_new') }}">New painting</a>
{% endblock %}
