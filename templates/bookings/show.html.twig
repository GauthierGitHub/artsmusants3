{% extends 'base.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}
    <h1>Bookings</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ booking.date ? booking.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ booking.startDate ? booking.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ booking.endDate ? booking.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Canceled</th>
                <td>{{ booking.canceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bookings_index') }}">back to list</a>

    <a href="{{ path('bookings_edit', {'id': booking.id}) }}">edit</a>

    {{ include('bookings/_delete_form.html.twig') }}
{% endblock %}
