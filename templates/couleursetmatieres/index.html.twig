{% extends 'basePublic.html.twig' %}

{% block title %}Couleur &amp; Matières - Arts Musants{% endblock %}

{% block body %}

<div class="jumbotron text-center">
    <h1>Couleur &amp; Matières</h1>
</div>

<div class="container">
    <div class="row">

        {% for painting in paintingsCouleursEtMatieres %}

        <div class="col-9 col-sm-4 align-self-center">
            <a href="{{ path('paintings_showOnePublic', {'id': painting.id}) }}">
                <img class="col-12" src="{{ asset('uploads/pictures/' ~ painting.picture) }}" alt="{{ painting.title }}">
            </a>
            <p class="text-center">{{ painting.title }}</p>
            <p class="text-center">{{ painting.height }}cm x {{ painting.width }}cm</p>
        </div>

        {% endfor %}

    </div>
</div>

{% endblock %}