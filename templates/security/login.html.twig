{% extends 'basePublic.html.twig' %}

{% block title %}Login - Arts Musants{% endblock %}

{% block body %}

<h2>Login</h2>

{% if error %}
<div class="alert alert-danger">
    {{ error.messageKey | trans(error.messagedata, 'security') }}
</div>
{% endif %}


<form id="login_form" action="{{path('login')}}" method="POST">
    <div class="form-group">
        <label for="username">User</label>
        <input id="username" class="form-control" type="text" name="_username" value="{{ last_username }}">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" class="form-control" type="password" name="_password">
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</form>
{% endblock %}