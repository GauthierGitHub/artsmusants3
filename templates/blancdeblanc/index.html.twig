{% extends 'basePublic.html.twig' %}

{% block title %}Blanc de Blanc - Arts Musants{% endblock %}

{% block body %}

<div class="jumbotron">
    <h1>Blanc de Blanc</h1>
</div>

<div class="container">
    <div class="row">

        {% for painting in pagination %}

        <div class="col-9 col-sm-4 float align-self-center {% if painting.width >= painting.height * 1.5 %}col-sm-8{% endif %}">
            <a href="{{ path('paintings_showOnePublic', {'id': painting.id}) }}">
                <img class="col-12" src="{{ asset('uploads/pictures/' ~ painting.picture) }}" alt="{{ painting.title }}">
            </a>
            <p class="text-center">{{ painting.title }}</p>
            <p class="text-center">{{ painting.height }}cm x {{ painting.width }}cm</p>
        </div>

        {% endfor %}

    </div>
</div>

{# paginator display navigation #}
<div class="navigation col-4">
    {{ knp_pagination_render(pagination) }}
</div>

{% endblock %}