{% extends 'base.html.twig' %}

{% block title %}Blanc de Blanc - Arts Musants{% endblock %}

{% block body %}

<div class="jumbotron text-center">
    <h1>Blanc de Blanc</h1>
</div>

<div class="container">
    <div class="row">

        {% for painting in paintingsBlancDeBlanc %}

        <div class="col-12 col-sm-4 mt-4">
            <a href="{{ path('paintings_showOnePublic', {'id': painting.id}) }}">
            <img src="{{ asset('uploads/pictures/' ~ painting.picture) }}" alt="{{ painting.title }}">
            </a>
        </div>

        {% endfor %}

    </div>
</div>

{% endblock %}