{% extends 'basePublic.html.twig' %}

{% block title %}Blanc de Blanc - Arts Musants{% endblock %}

{% block body %}

<div class="jumbotron">
    <h1>Blanc de Blanc</h1>
</div>

<div class="container">
    <div class="row">

        {% for painting in paintingsBlancDeBlanc %}

        <div class="col-9 col-sm-4 align-self-center">
            <a href="{{ path('paintings_showOnePublic', {'id': painting.id}) }}">
                <img class="col-12" src="{{ asset('uploads/pictures/' ~ painting.picture) }}" alt="{{ painting.title }}">
            </a>
            <p class="text-center">{{ painting.title }}</p>
            <p class="text-center">{{ painting.height }} x {{ painting.width }}</p>
        </div>

        {% endfor %}

    </div>
</div>

{% endblock %}